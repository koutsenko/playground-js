{
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "target": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/*"]
        }
    }
}